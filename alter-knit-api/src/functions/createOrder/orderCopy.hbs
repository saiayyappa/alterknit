            </h1>
        </div>
        <div class="f-12">
            <p>ALTERKNIT NEW YORK</p>
            <p>C/O MANHATTAN WARDOBE SUPPLY</p>
            <p>orders@alterknitnewyork.com</p>
        </div>
        <div class="f-12">
            <p>31-64 21st St #149 Astoria,</p>
            <p>New York, 11106</p>
            <p>212-473-6363</p>
        </div>
    </header>
    <hr color="#e1e1e1">
    <section class="f-14 mt-2 mb-2">
        <p>Form Generated on <span class="text-bold">{{createdAt}} EST</span></p>
        {{!-- <p><span class="text-bold">RETURNING CUSTOMER</span> YES</p> --}}
    </section>
    <section class="background-grey shipping f-14 p-1">
        <p class="text-bold">I AM</p>
        <p>{{#ifCond orderMethod 'Ship'}}Shipping in{{else}}Picking up{{/ifCond}}</p>
        <p class="text-bold">RETURN OPTION</p>
        <p>{{#ifCond orderMethod 'Ship'}}Ship it{{else}}Pick up{{/ifCond}}</p>
    </section>
    <section class="f-14 mt-2">
        <div class="background-grey p-1">
            <p class="text-bold">SHIPPING INFORMATION</p>
        </div>
        <table class="mt-2 mb-2 p-1" id="billing-address-table">
            <tr>
                <td>FIRST NAME</td>
                <td>{{addressInfo.firstName}}</td>
                <td>EMAIL</td>
                <td>{{addressInfo.email}}</td>
            </tr>
            <tr>
                <td>LAST NAME</td>
                <td>{{addressInfo.lastName}}</td>
                <td>TEL</td>
                <td>{{addressInfo.phone}}</td>
            </tr>
            <tr>
                <td>ADDRESS</td>
                <td>{{addressInfo.address}}</td>
                {{!-- <td>CARD #</td>
                <td>5522605000901854</td> --}}
            </tr>
            {{!-- <tr>
                <td>APT #</td>
                <td>skjvbsjd</td>
                <td>CARD EXP</td>
                <td>1021</td>
            </tr> --}}
            <tr>
                <td>STATE &amp; ZIP</td>
                <td>{{addressInfo.state}}, {{addressInfo.zipcode}}</td>
            </tr>
            {{#ifCond orderMethod 'Pickup'}}
            <tr>
                <td>BUILDING TYPE</td>
                <td>{{addressInfo.buildingType}}</td>
            </tr>
            <tr>
                <td>PICKUP DATE</td>
                <td>{{addressInfo.pickUpDate}}</td>
                <td>PICKUP TIME</td>
                <td>{{addressInfo.pickUpTime}}</td>
            </tr>
            {{/ifCond}}
        </table>
        <div class="background-grey d-flex p-1 mb-2">
            <p class="text-bold">BILLING INFORMATION</p>
            <p style="margin-left: auto;">
                <span class="text-bold">SAME AS SHIPPING INFORMATION?</span>
                {{#if addressInfo.isBillingAddressSame}}YES{{else}}NO{{/if}}
            </p>
        </div>
        {{#if addressInfo.isBillingAddressSame}}{{else}}
        <table class="mt-2 mb-2 p-1" id="billing-address-table">
            <tr>
                <td>FIRST NAME</td>
                <td>{{billingAddressInfo.firstName}}</td>
                <td>EMAIL</td>
                <td>{{billingAddressInfo.email}}</td>
            </tr>
            <tr>
                <td>LAST NAME</td>
                <td>{{billingAddressInfo.lastName}}</td>
                <td>TEL</td>
                <td>{{billingAddressInfo.phone}}</td>
            </tr>
            <tr>
                <td>ADDRESS</td>
                <td>{{billingAddressInfo.address}}</td>
                {{!-- <td>CARD #</td>
                <td>5522605000901854</td> --}}
            </tr>
            <tr>
                <td>STATE &amp; ZIP</td>
                <td>{{billingAddressInfo.state}}, {{billingAddressInfo.zipcode}}</td>
            </tr>
        </table>
        {{/if}}
    </section>
    <section>
        <table class="orders-table f-12">
            <tr>
                <th>No.</th>
                <th>SERVICE</th>
                <th>PRE-REPAIRED</th>
                <th>BRAND</th>
                <th>COLOR</th>
                <th>DAMAGE DESCRIPTION</th>
            </tr>
            {{#each garments}}
            {{#with this}}
            <tr>
                <td>{{inc @index}}</td>
                <td>
                    {{#services serviceNeeded}}{{this}}{{/services}}
                </td>
                <td>FALSE</td>
                <td>{{brand}}</td>
                <td>{{color}}</td>
                <td>{{briefDescription}}</td>
            </tr>
            {{/with}}
            {{/each}}
        </table>
    </section>
